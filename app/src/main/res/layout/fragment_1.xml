<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- 顶部搜索栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@android:color/white"
            android:elevation="2dp">
            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="搜索闲置物品..."
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/search_background"
                android:drawablePadding="8dp"
                android:singleLine="true"
                android:textSize="14sp" />
<!--            android:drawableStart="@drawable/ic_search"-->
            <Button
                android:id="@+id/btnFilter"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/sousuo"
                android:backgroundTint="#6C5CE7" />
        </LinearLayout>
        <!-- 轮播图/Banner区域 -->
        <FrameLayout
            android:id="@+id/bannerContainer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="5dp">
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/bannerViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <!-- 左侧点击区域 -->
            <View
                android:id="@+id/leftClickArea"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@android:color/transparent"/>
            <!-- 右侧点击区域 -->
            <View
                android:id="@+id/rightClickArea"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@android:color/transparent"/>
        </FrameLayout>
        <!-- 快捷分类标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="快捷分类"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2D3436" />

        <!-- 快捷分类网格 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:columnCount="4"
            android:rowCount="2"
            android:alignmentMode="alignBounds"
            android:columnOrderPreserved="false">

            <!-- 分类1：图书 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/category_background">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/tushu"
                    android:contentDescription="图书" />
<!--                android:src="@drawable/ic_book"-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="图书"
                    android:textSize="12sp"
                    android:textColor="#2D3436" />
            </LinearLayout>

            <!-- 分类2：数码 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/category_background">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/shuma"
                    android:contentDescription="数码" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="数码"
                    android:textSize="12sp"
                    android:textColor="#2D3436" />
            </LinearLayout>
            <!-- 分类3：衣物 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/category_background">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/yiwu"
                    android:contentDescription="衣物" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="衣物"
                    android:textSize="12sp"
                    android:textColor="#2D3436" />
            </LinearLayout>

            <!-- 分类4：日用 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/category_background">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/riyong"
                    android:contentDescription="日用" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="日用"
                    android:textSize="12sp"
                    android:textColor="#2D3436" />
            </LinearLayout>

            <!-- 分类5：电器 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/category_background">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/dianqi"
                    android:contentDescription="电器" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="电器"
                    android:textSize="12sp"
                    android:textColor="#2D3436" />
            </LinearLayout>

            <!-- 分类6：运动 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/category_background">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/yundong"
                    android:contentDescription="运动" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="运动"
                    android:textSize="12sp"
                    android:textColor="#2D3436" />
            </LinearLayout>

            <!-- 分类7：美妆 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/category_background">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/meizhuang"
                    android:contentDescription="美妆" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="美妆"
                    android:textSize="12sp"
                    android:textColor="#2D3436" />
            </LinearLayout>

            <!-- 分类8：其他 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/category_background">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/other"
                    android:contentDescription="其他" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="其他"
                    android:textSize="12sp"
                    android:textColor="#2D3436" />
            </LinearLayout>
        </GridLayout>

        <!-- 推荐商品标题 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="精选推荐"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2D3436" />

            <Button
                android:id="@+id/tvViewAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看全部 >"
                android:textSize="13sp"
                android:backgroundTint="#fff"
                android:textColor="#6C5CE7" />
        </LinearLayout>

        <!-- 推荐商品列表 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="8dp"
            android:elevation="2dp"
            android:clipToPadding="false">
            <!-- 推荐商品1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/iphone"
                    android:contentDescription="推荐商品"
                    android:scaleType="centerCrop"
                    android:background="#E0E0E0" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="九成新iPhone"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#2D3436" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="iPhone14 pro Max，几乎全新"
                        android:textSize="12sp"
                        android:textColor="#636E72"
                        android:maxLines="1"
                        android:ellipsize="end" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="¥1,119.00"
                        android:textSize="14sp"
                        android:textColor="#E84393"
                        android:textStyle="bold" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnBuy1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购买"
                    android:textSize="12sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:backgroundTint="#6C5CE7" />
            </LinearLayout>
            <!-- 分隔线 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="#EAEBEF" />
            <!-- 推荐商品2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/airpod"
                    android:contentDescription="推荐商品"
                    android:scaleType="centerCrop"
                    android:background="#E0E0E0" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="蓝牙耳机"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#2D3436" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="品牌蓝牙耳机，音质清晰"
                        android:textSize="12sp"
                        android:textColor="#636E72"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="¥599.00"
                        android:textSize="14sp"
                        android:textColor="#E84393"
                        android:textStyle="bold" />
                </LinearLayout>
                <Button
                    android:id="@+id/btnBuy2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购买"
                    android:textSize="12sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:backgroundTint="#6C5CE7" />
            </LinearLayout>
        </LinearLayout>
        <!-- 底部提示 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="校园闲置，绿色循环"
            android:textSize="12sp"
            android:textColor="#B2BEC3" />
    </LinearLayout>
</ScrollView>